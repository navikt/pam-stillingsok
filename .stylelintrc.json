{
    "extends": ["stylelint-config-recommended", "@navikt/aksel-stylelint/recommended"],
    "rules": {
        "selector-class-pattern": ["^([a-z][a-z0-9]*)(-[a-z0-9]+)*$", { "disableFix": true }],
        "selector-pseudo-class-no-unknown": true
    },
    "overrides": [
        {
            "files": ["**/*.module.css"],
            "rules": {
                "selector-pseudo-class-no-unknown": [
                    true,
                    {
                        "ignorePseudoClasses": ["global", "local", "export", "import"]
                    }
                ],
                "property-no-unknown": [
                    true,
                    {
                        "ignoreProperties": ["composes"]
                    }
                ],
                "at-rule-no-unknown": [
                    true,
                    {
                        "ignoreAtRules": ["value"]
                    }
                ]
            }
        },
        {
            "files": ["**/*.css", "!**/*.module.css"],
            "rules": {
                "selector-pseudo-class-no-unknown": true,
                "property-no-unknown": true,
                "at-rule-no-unknown": true
            }
        }
    ]
}
